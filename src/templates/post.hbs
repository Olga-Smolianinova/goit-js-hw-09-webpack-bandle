{{!-- отдельный файл для библиотеки handlebars и создания шаблонов  --}}

{{#each this}}
<li class="postItem">
    <img src="{{picture}}" alt="{{title}}">

    <h3>{{title}}</h3>

    <ul>
        {{#each tags}}
        <li>{{this}}</li>
        {{/each}}
    </ul>

    <p>{{text}}</p>

</li>
{{/each}}